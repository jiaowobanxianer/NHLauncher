<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		x:Class="NHLauncher.CreateNewProfileWindow"
		xmlns:views="clr-namespace:NHLauncher.Views"
		xmlns:vm="clr-namespace:NHLauncher.ViewModels"
		x:DataType="vm:CreateNewProfileViewModel"
		Title="CreateNewProfile" Width="300" Height="400"
		WindowStartupLocation="CenterScreen"
		Background="Transparent"
		ExtendClientAreaChromeHints="NoChrome"
		ExtendClientAreaToDecorationsHint="True"
		TransparencyLevelHint="AcrylicBlur"
		>
	<Design.DataContext>
		<vm:CreateNewProfileViewModel/>
	</Design.DataContext>
	<views:DragableBorder>
		<Grid>
			<views:FadeBG CornerRadius="10" ClipToBounds="True"/>
			<Border Background="Transparent" CornerRadius="10" Padding="20" ClipToBounds="True">
				<StackPanel Spacing="8" Background="Transparent">
					<TextBlock Text="Project ID"/>
					<TextBox Text="{Binding ProjectId, Mode=TwoWay}" />

					<TextBlock Text="Platform"/>
					<TextBox Text="{Binding Platform, Mode=TwoWay}" />

					<TextBlock Text="App Name"/>
					<TextBox Text="{Binding AppName, Mode=TwoWay}" />

					<StackPanel Orientation="Horizontal" Spacing="10">
						<TextBlock Text="UseCDN" VerticalAlignment="Center"/>
						<CheckBox IsChecked="{Binding UseCDN, Mode=TwoWay}" VerticalAlignment="Bottom"/>
					</StackPanel>

					<TextBlock Text="Server URL" IsVisible="{Binding UseCDN }"/>
					<TextBox Text="{Binding ServerBaseUrl, Mode=TwoWay}" IsVisible="{Binding UseCDN}"/>

					<TextBlock Text="API" IsVisible="{Binding UseCDN ,Converter={StaticResource InverseBoolConverter}}"/>
					<TextBox Text="{Binding API, Mode=TwoWay}" IsVisible="{Binding UseCDN ,Converter={StaticResource InverseBoolConverter}}"/>

					<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="5" Margin="0,10,0,0">
						<Button Content="Save" Click="SaveButton_Click" Background="Beige"/>
						<Button Content="Cancel" Click="CancelButton_Click" Background="Beige"/>
					</StackPanel>
				</StackPanel>
			</Border>
		</Grid>
	</views:DragableBorder>
</Window>
