<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="200"
        x:Class="NHLauncher.SettingWindow"
        xmlns:views="clr-namespace:NHLauncher.Views"
		xmlns:vm="clr-namespace:NHLauncher.ViewModels"
		x:DataType="vm:SettingViewModel"
        Title="Setting" Width="300" Height="200"
		WindowStartupLocation="CenterScreen"
		Background="Transparent"
		ExtendClientAreaChromeHints="NoChrome"
		ExtendClientAreaToDecorationsHint="True"
		TransparencyLevelHint="AcrylicBlur">

    <views:DragableBorder>
		<Grid>
			<views:FadeBG CornerRadius="10" ClipToBounds="True"/>
			<Border Background="Transparent" CornerRadius="10" Padding="20" ClipToBounds="True">
					<StackPanel Orientation="Vertical" HorizontalAlignment="Center" Spacing="5" Margin="0,10,0,0" VerticalAlignment="Center">
						<ProgressBar Value="{Binding DownloadProgress}" IsVisible="{Binding Updating}" ShowProgressText="True" HorizontalAlignment="Center"/>
						<Button Content="检查更新" Command="{Binding CheckUpdateCommand}" Background="Beige" HorizontalAlignment="Center" IsEnabled="{Binding !Updating}"/>
						<Button Content="返回" Command="{Binding CancelCommand}" Background="Beige" HorizontalAlignment="Center" IsEnabled="{Binding !Updating}"/>
					</StackPanel>
			</Border>
		</Grid>
	</views:DragableBorder>
</Window>
